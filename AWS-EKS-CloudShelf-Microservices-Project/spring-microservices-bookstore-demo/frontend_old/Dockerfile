# ------------------------------------------------------------
# Multi-stage build for Next.js (standalone) - Production ready
# ------------------------------------------------------------

# Base image
FROM node:20-alpine AS base

# ------------------------------------------------------------
# deps: install prod deps via npm ci
# ------------------------------------------------------------
FROM base AS deps
RUN apk add --no-cache libc6-compat
WORKDIR /app

# Only copy manifest files for a clean, cached install
COPY package.json package-lock.json* ./
RUN npm ci

# ------------------------------------------------------------
# builder: compile Next.js with standalone output
# ------------------------------------------------------------
FROM base AS builder
WORKDIR /app

# Reuse node_modules from deps
COPY --from=deps /app/node_modules ./node_modules

# Copy the rest of the source
COPY . .

# Ensure public/ exists even if the repo doesn't have it,
# so the later COPY in the runner stage never fails.
RUN mkdir -p public

# Build (no build-time env needed)
ENV NEXT_TELEMETRY_DISABLED=1
ENV NODE_ENV=production
# If your next.config.js has `output: 'standalone'`, this will produce .next/standalone
RUN npm run build

# ------------------------------------------------------------
# runner: minimal runtime (Next.js standalone)
# ------------------------------------------------------------
FROM base AS runner
WORKDIR /app

ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

# Create a non-root user
RUN addgroup --system --gid 1001 nodejs \
 && adduser  --system --uid 1001 nextjs

# Copy static/public assets (safe even if empty; we created it in builder)
COPY --from=builder --chown=nextjs:nodejs /app/public ./public

# Copy the standalone server and static assets produced by Next.js
COPY --from=builder --chown=nextjs:nodejs /app/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/.next/static ./.next/static

# Run as non-root
USER nextjs

# Network config
EXPOSE 3000
ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

# Start the server generated by Next.js standalone output
CMD ["node", "server.js"]
